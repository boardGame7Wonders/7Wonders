<?xml version="1.0" encoding="UTF-8"?>

<!-- This file declares effects of cards. -->
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<!-- Effects of cards -->

	<!-- Gain victory points -->
	<bean id="gain_2_victory_points" class="com.boardgame.sevenwonders.model.CardEffect">
		<property name="name" value="gain_victory_points" />
		<property name="parameters">
			<list>
				<value>2</value>
			</list>
		</property>
	</bean>

	<bean id="gain_3_victory_points" class="com.boardgame.sevenwonders.model.CardEffect">
		<property name="name" value="gain_victory_points" />
		<property name="parameters">
			<list>
				<value>3</value>
			</list>
		</property>
	</bean>

	<!-- Produce resource -->

	<bean id="produce_1_wood" class="com.boardgame.sevenwonders.model.CardEffect">
		<property name="name" value="produce_resource" />
		<property name="parameters">
			<list>
				<value>W</value> <!-- 1 wood -->
			</list>
		</property>
	</bean>

	<bean id="produce_2_wood" class="com.boardgame.sevenwonders.model.CardEffect">
		<property name="name" value="produce_resource" />
		<property name="parameters">
			<list>					<!-- 2 wood -->
				<value>W</value>
				<value>W</value>
			</list>
		</property>
	</bean>

	<bean id="produce_1_stone" class="com.boardgame.sevenwonders.model.CardEffect">
		<property name="name" value="produce_resource" />
		<property name="parameters">
			<list>
				<value>S</value> <!-- 1 stone -->
			</list>
		</property>
	</bean>

	<bean id="produce_2_stone" class="com.boardgame.sevenwonders.model.CardEffect">
		<property name="name" value="produce_resource" />
		<property name="parameters">
			<list>					<!-- 2 stone -->
				<value>S</value>
				<value>S</value>
			</list>
		</property>
	</bean>

	<bean id="produce_1_brick" class="com.boardgame.sevenwonders.model.CardEffect">
		<property name="name" value="produce_resource" />
		<property name="parameters">
			<list>
				<value>B</value> <!-- 1 brick -->
			</list>
		</property>
	</bean>

	<bean id="produce_2_brick" class="com.boardgame.sevenwonders.model.CardEffect">
		<property name="name" value="produce_resource" />
		<property name="parameters">
			<list>					<!-- 2 brick -->
				<value>B</value>
				<value>B</value>
			</list>
		</property>
	</bean>

	<bean id="produce_1_metal" class="com.boardgame.sevenwonders.model.CardEffect">
		<property name="name" value="produce_resource" />
		<property name="parameters">
			<list>
				<value>M</value> <!-- 1 metal -->
			</list>
		</property>
	</bean>

	<bean id="produce_2_metal" class="com.boardgame.sevenwonders.model.CardEffect">
		<property name="name" value="produce_resource" />
		<property name="parameters">
			<list>					<!-- 2 metal -->
				<value>M</value>
				<value>M</value>
			</list>
		</property>
	</bean>

	<bean id="produce_1_wood_or_1_stone" class="com.boardgame.sevenwonders.model.CardEffect">
		<property name="name" value="produce_resource" />
		<property name="parameters">
			<list>
				<value>WS</value>	<!-- wood or stone -->
			</list>
		</property>
	</bean>

	<bean id="produce_1_wood_or_1_brick" class="com.boardgame.sevenwonders.model.CardEffect">
		<property name="name" value="produce_resource" />
		<property name="parameters">
			<list>
				<value>WB</value>	<!-- wood or brick -->
			</list>
		</property>
	</bean>

	<bean id="produce_1_wood_or_1_metal" class="com.boardgame.sevenwonders.model.CardEffect">
		<property name="name" value="produce_resource" />
		<property name="parameters">
			<list>
				<value>WM</value>	<!-- wood or metal -->
			</list>
		</property>
	</bean>

	<bean id="produce_1_stone_or_1_brick" class="com.boardgame.sevenwonders.model.CardEffect">
		<property name="name" value="produce_resource" />
		<property name="parameters">
			<list>
				<value>SB</value>	<!-- stone or brick -->
			</list>
		</property>
	</bean>

	<bean id="produce_1_stone_or_1_metal" class="com.boardgame.sevenwonders.model.CardEffect">
		<property name="name" value="produce_resource" />
		<property name="parameters">
			<list>
				<value>SM</value>	<!-- stone or metal -->
			</list>
		</property>
	</bean>

	<bean id="produce_1_brick_or_1_metal" class="com.boardgame.sevenwonders.model.CardEffect">
		<property name="name" value="produce_resource" />
		<property name="parameters">
			<list>
				<value>BM</value>	<!-- brick or metal -->
			</list>
		</property>
	</bean>

	<bean id="produce_1_fabric" class="com.boardgame.sevenwonders.model.CardEffect">
		<property name="name" value="produce_resource" />
		<property name="parameters">
			<list>
				<value>F</value>	<!-- fabric -->
			</list>
		</property>
	</bean>

	<bean id="produce_1_glass" class="com.boardgame.sevenwonders.model.CardEffect">
		<property name="name" value="produce_resource" />
		<property name="parameters">
			<list>
				<value>G</value>	<!-- glass -->
			</list>
		</property>
	</bean>

	<bean id="produce_1_paper" class="com.boardgame.sevenwonders.model.CardEffect">
		<property name="name" value="produce_resource" />
		<property name="parameters">
			<list>
				<value>P</value>	<!-- paper -->
			</list>
		</property>
	</bean>



	<!-- Gain Gold -->
	<bean id="gain_5_gold" class="com.boardgame.sevenwonders.model.CardEffect">
		<property name="name" value="gain_gold" />
		<property name="parameters">
			<list>
				<value>5</value>  <!-- gold amout to gain -->
			</list>
		</property>
	</bean>

	<!-- Trade Cost Modifier -->
	<bean id="trade_cost_to_right_minus_1_for_primary_resource" class="com.boardgame.sevenwonders.model.CardEffect">
		<property name="name" value="trade_cost_modifier" />
		<property name="parameters">
			<list>
				<value>primary_resource</value> <!-- resource type -->
				<value>right</value>			<!-- trade destination -->
				<value>minus</value>			<!-- operator -->
				<value>1</value>				<!-- value -->
			</list>
		</property>
	</bean>

	<bean id="trade_cost_to_left_minus_1_for_primary_resource" class="com.boardgame.sevenwonders.model.CardEffect">
		<property name="name" value="trade_cost_modifier" />
		<property name="parameters">
			<list>
				<value>primary_resource</value> <!-- resource type -->
				<value>left</value>				<!-- trade destination -->
				<value>minus</value>			<!-- operator -->
				<value>1</value>				<!-- value -->
			</list>
		</property>
	</bean>

	<bean id="trade_cost_to_right_minus_1_for_secondary_resource"
		class="com.boardgame.sevenwonders.model.CardEffect">
		<property name="name" value="trade_cost_modifier" />
		<property name="parameters">
			<list>
				<value>secondary_resource</value> <!-- resource type -->
				<value>right</value>			<!-- trade destination -->
				<value>minus</value>			<!-- operator -->
				<value>1</value>				<!-- value -->
			</list>
		</property>
	</bean>

	<bean id="trade_cost_to_left_minus_1_for_secondary_resource"
		class="com.boardgame.sevenwonders.model.CardEffect">
		<property name="name" value="trade_cost_modifier" />
		<property name="parameters">
			<list>
				<value>secondary_resource</value> <!-- resource type -->
				<value>left</value>				<!-- trade destination -->
				<value>minus</value>			<!-- operator -->
				<value>1</value>				<!-- value -->
			</list>
		</property>
	</bean>

	<!-- Military Modifier -->

	<bean id="gain_1_military_might" class="com.boardgame.sevenwonders.model.CardEffect">
		<property name="name" value="military_might_modifier" />
		<property name="parameters">
			<list>
				<value>plus</value>			<!-- operator -->
				<value>1</value>			<!-- value -->
			</list>
		</property>
	</bean>

	<bean id="gain_2_military_might" class="com.boardgame.sevenwonders.model.CardEffect">
		<property name="name" value="military_might_modifier" />
		<property name="parameters">
			<list>
				<value>plus</value>			<!-- operator -->
				<value>2</value>			<!-- value -->
			</list>
		</property>
	</bean>

	<bean id="gain_3_military_might" class="com.boardgame.sevenwonders.model.CardEffect">
		<property name="name" value="military_might_modifier" />
		<property name="parameters">
			<list>
				<value>plus</value>			<!-- operator -->
				<value>3</value>			<!-- value -->
			</list>
		</property>
	</bean>

	<!-- End of Card Effects -->


</beans>