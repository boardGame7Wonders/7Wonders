<?xml version="1.0" encoding="UTF-8"?>
<!-- This file declares cards and effects of cards. -->
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<!-- Effects of cards -->
	
	<!-- Gain victory points -->
	<bean id="gain_2_victory_points" class="com.boardgame.sevenwonders.model.CardEffect">
		<property name="name" value="gain_victory_points" />
		<property name="parameters">
			<list>
				<value>2</value>
			</list>
		</property>
	</bean>

	<bean id="gain_3_victory_points" class="com.boardgame.sevenwonders.model.CardEffect">
		<property name="name" value="gain_victory_points" />
		<property name="parameters">
			<list>
				<value>3</value>
			</list>
		</property>
	</bean>
	
	<!-- Produce resource -->

	<bean id="produce_1_wood" class="com.boardgame.sevenwonders.model.CardEffect">
		<property name="name" value="produce_resource" />
		<property name="parameters">
			<list>
				<value>W</value> <!-- 1 wood -->
			</list>
		</property>
	</bean>

	<bean id="produce_2_wood" class="com.boardgame.sevenwonders.model.CardEffect">
		<property name="name" value="produce_resource" />
		<property name="parameters">
			<list>					<!-- 2 wood -->
				<value>W</value>
				<value>W</value>
			</list>
		</property>
	</bean>

	<bean id="produce_1_wood_or_1_Stone" class="com.boardgame.sevenwonders.model.CardEffect">
		<property name="name" value="produce_resource" />
		<property name="parameters">
			<list>
				<value>WS</value>	<!-- wood or stone -->
			</list>
		</property>
	</bean>
	
	<!-- Gain Gold -->
	<bean id="gain_5_gold" class="com.boardgame.sevenwonders.model.CardEffect">
		<property name="name" value="gain_gold" />
		<property name="parameters">
			<list>
				<value>5</value>  <!-- gold amout to gain -->
			</list>
		</property>
	</bean>	
	
	<!-- Trade Cost Modifier -->
	<bean id="trade_cost_to_right_minus_1_for_primary_resource" class="com.boardgame.sevenwonders.model.CardEffect">
		<property name="name" value="trade_cost_modifier" />
		<property name="parameters">
			<list>
				<value>primary_resource</value> <!-- resource type -->
				<value>right</value>			<!-- trade destination -->
				<value>minus</value>			<!-- operator -->
				<value>1</value>				<!-- value -->
			</list>
		</property>
	</bean>	
	
	<bean id="trade_cost_to_left_minus_1_for_primary_resource" class="com.boardgame.sevenwonders.model.CardEffect">
		<property name="name" value="trade_cost_modifier" />
		<property name="parameters">
			<list>
				<value>primary_resource</value> <!-- resource type -->
				<value>left</value>				<!-- trade destination -->
				<value>minus</value>			<!-- operator -->
				<value>1</value>				<!-- value -->
			</list>
		</property>
	</bean>	
	
	<bean id="trade_cost_to_right_minus_1_for_secondary_resource" class="com.boardgame.sevenwonders.model.CardEffect">
		<property name="name" value="trade_cost_modifier" />
		<property name="parameters">
			<list>
				<value>secondary_resource</value> <!-- resource type -->
				<value>right</value>			<!-- trade destination -->
				<value>minus</value>			<!-- operator -->
				<value>1</value>				<!-- value -->
			</list>
		</property>
	</bean>	
	
	<bean id="trade_cost_to_left_minus_1_for_secondary_resource" class="com.boardgame.sevenwonders.model.CardEffect">
		<property name="name" value="trade_cost_modifier" />
		<property name="parameters">
			<list>
				<value>secondary_resource</value> <!-- resource type -->
				<value>left</value>				<!-- trade destination -->
				<value>minus</value>			<!-- operator -->
				<value>1</value>				<!-- value -->
			</list>
		</property>
	</bean>	
	
	<!-- End of Card Effects -->

	<!-- Cards -->
	<!-- Age 1 Commercial Cards -->
	<bean id="tarverne" class="com.boardgame.sevenwonders.model.Card">
		<property name="id" value="100" />
		<property name="name" value="Tarverne" />
		<property name="age" value="1" />
		<property name="category" value="COMMERCE" />
		<property name="resourceCost">
			<list>
			</list>
		</property>
		<property name="goldCost" value="0" />
		<property name="effects">
			<list>
				<ref bean="gain_5_gold" />
			</list>
		</property>
		<property name="upgradeFromCardID" value="-1" /> <!-- negative number for impossibility to upgrade from any card -->
	</bean>

	<bean id="comptoir_est" class="com.boardgame.sevenwonders.model.Card">
