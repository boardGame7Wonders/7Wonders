		</property>
		<property name="goldCost" value="0" />
		<property name="effects">
			<list>
				<ref bean="trade_cost_to_left_minus_1_for_primary_resource" />
			</list>
		</property>
		<property name="upgradeFromCardID" value="-1" /> <!-- negative number for impossibility to upgrade from any card -->
	</bean>	
	
	<bean id="marche" class="com.boardgame.sevenwonders.model.Card">
		<property name="id" value="103" />
		<property name="name" value="Marche" />
		<property name="age" value="1" />
		<property name="category" value="COMMERCE" />
		<property name="resourceCost">
			<list>
			</list>
		</property>
		<property name="goldCost" value="0" />
		<property name="effects">
			<list>
				<ref bean="trade_cost_to_left_minus_1_for_secondary_resource" />
				<ref bean="trade_cost_to_right_minus_1_for_secondary_resource" />
			</list>
		</property>
		<property name="upgradeFromCardID" value="-1" /> <!-- negative number for impossibility to upgrade from any card -->
	</bean>	
		
